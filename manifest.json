{
  "name": "EDUrate",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "This extension rates YouTube videos on their educational value.",
  "default_locale": "en",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "page_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "EDUrate your Youtube Videos!",
    "default_popup": "src/page_action/page_action.html"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "http://www.youtube.com/*"
      ],
      "js": [
        "src/content.js"
      ],
      "css": [
        "src/inject/inject.css"
      ]
    }
  ]
}
